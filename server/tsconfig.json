{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2020",
    "module": "ESNext",
    "outDir": "dist",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "declaration": true,
    "strict": true,
    "baseUrl": "./api"
  },
  "include": ["api/**/*", "vite.config.ts", "*.cjs", "api/UserRespository.ts", "api/types.ts", "api/PostRepository.ts", "api/index.ts", "api/database.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
