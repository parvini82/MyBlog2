{
  "name": "my-blog",
  "author": "Mohammad Hosein Parvini",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "tsc && cd dist && node index.js",
    "dev": "npx vite-node --watch api/index.ts",
    "server": "yarn start",
    "build": "yarn build:tsc && yarn build:rollup",
    "build:tsc": "tsc",
    "build:rollup": "rollup --config rollup.config.js",
    "pkg": "pkg -C GZip -t node18-linux-x64,node18-win-x64 -o build/admopro --public-packages \"!*\" build/index.js",
    "buildTemp-ncc": "ncc build --no-source-map-register -C -s -d -m -o build ./api/index.ts",
    "buildTemp-rollup2": "rollup --config rollup.config.js",
    "buildTemp-rollup-ts": "rollup --configPlugin typescript --config rollup.config.ts",
    "buildTemp-pkg": "pkg --compress GZip .",
    "prod": "yarn production",
    "production": "yarn build && yarn pkg",
    "types": "tsc --noEmit",
    "lint": "eslint \"./api/\" --ext \".ts,.tsx,.js,.jsx\" --fix --no-eslintrc --config \"../.eslintrc.json\" --parser-options project:tsconfig.json",
    "format": "prettier \"./api/**/*.{js,jsx,ts,tsx}\" --write --config \"../.prettierrc.json\"",
    "fl:server": "concurrently -m 1 -c \"bgGreen,bgMagenta\" \"npm:format\" \"npm:lint\"",
    "start:inspect2": "nodemon -e ts,js,mjs,cjs,json --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm --inspect api\\index.ts\"",
    "start:inspect": "nodemon -e ts,js,mjs,cjs,json --exec \"node --experimental-specifier-resolution=node --require ts-node/register --loader ts-node/esm --inspect api\\index.ts\"",
    "update": "npx npm-check-updates -i -x \"rollup chalk\"",
    "clear": "rimraf -G dist build"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.1",
    "kysely": "^0.26.3",
    "mysql2": "^3.6.3",
    "raw-body": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "^2.13.11",
    "@types/koa__cors": "^4.0.3",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.7",
    "@types/node": "^20.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite-node": "0.34.6"
  }
}
